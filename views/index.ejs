<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <link rel="stylesheet" href="../stylesheets/style.css" />
    <title>Login - Signup</title>
  </head>
  <body>
 
 <main class="min-h-screen flex flex-col ">
     <% if(error.length > 0){%>
      <div class="w-screen flex justify-center">
  <div class="w-1/3 bg-red-500 text-white font-semibold px-6 py-3 rounded-b-lg shadow-lg text-center">
  <h3><%= error %></h3>
</div>
</div>

    <%} %>
  <nav class="mb-8">
    <h1 class="text-xl font-bold">Scatch</h1>
  </nav>
  <h1 class="text-3xl text-center font-bold">Welcome to <span class="text-blue-400">Scatch</span></h1>
  <div class="flex flex-1 justify-center items-start gap-25 mt-20">
    <!-- Signup -->
    <section class="w-96">
      <h2 class="font-bold text-lg mb-4">Create your account</h2>
      <form action="/users/create" method="POST" class="flex flex-col flex-wrap gap-4">
        <input class="w-full px-4 py-3 rounded-lg outline-none bg-zinc-100 focus:border-blue-500 focus:ring-2 focus:ring-blue-500" type="text" placeholder="Full Name" name="fullname" />
        <input class="w-full px-4 py-3 rounded-lg outline-none bg-zinc-100 focus:border-blue-500 focus:ring-2 focus:ring-blue-500" type="email" placeholder="Email" name="email" />
        <input class="w-full px-4 py-3 rounded-lg outline-none bg-zinc-100 focus:border-blue-500 focus:ring-2 focus:ring-blue-500" type="password" placeholder="Password" name="password" />
        <input class="w-52 px-3 py-2 bg-blue-500 rounded-full text-white font-semibold cursor-pointer" type="submit" value="Create My Account" />
      </form>
    </section>
    <!-- Login -->
    <section class="w-96">
      <h2 class="font-bold text-lg mb-4">Login your account</h2>
      <form action="/users/login" method="POST" class="flex flex-col flex-wrap gap-4">
        <input class="w-full px-4 py-3 rounded-lg outline-none bg-zinc-100 focus:border-blue-500 focus:ring-2 focus:ring-blue-500" type="email" placeholder="Email" name="email" />
        <input class="w-full px-4 py-3 rounded-lg outline-none bg-zinc-100 focus:border-blue-500 focus:ring-2 focus:ring-blue-500" type="password" placeholder="Password" name="password" />
        <input class="w-36 px-3 py-2 bg-blue-500 rounded-full text-white font-semibold cursor-pointer" type="submit" value="Login" />
      </form>
    </section>
  </div>
</main>
  </body>
</html>
